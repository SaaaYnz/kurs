<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.amozov_kurs.Controllers.AdminController"
      prefHeight="643.0" prefWidth="1034.0">

    <children>

        <!-- Верхняя панель -->
        <HBox alignment="CENTER_LEFT" prefHeight="80">
            <children>
                <Button fx:id="backButton" text="Back" onAction="#openMainWindow"
                        prefHeight="30" prefWidth="90"
                        style="-fx-background-color: #0fb7ff; -fx-background-radius: 15;" textFill="WHITE">
                    <HBox.margin>
                        <Insets left="15"/>
                    </HBox.margin>
                </Button>

                <Label text="Admin panel">
                    <font>
                        <Font name="System Bold" size="28"/>
                    </font>
                    <HBox.margin>
                        <Insets left="25"/>
                    </HBox.margin>
                </Label>
            </children>
        </HBox>

        <HBox alignment="CENTER" spacing="15" prefHeight="60">
            <children>
                <Button text="Cars" fx:id="carsButton" onAction="#showCarsTable"
                        style="-fx-background-color: #0fb7ff; -fx-background-radius: 15;"
                        textFill="WHITE" prefWidth="120" prefHeight="30"/>

                <Button text="Users" fx:id="usersButton" onAction="#showOrdersTable"
                        style="-fx-background-color: #0fb7ff; -fx-background-radius: 15;"
                        textFill="WHITE" prefWidth="120" prefHeight="30"/>
            </children>
        </HBox>

        <TableView fx:id="carTable" prefHeight="420" prefWidth="1000">
            <columns>
                <TableColumn fx:id="manufactureColumn" prefWidth="125" text="Manufacture"/>
                <TableColumn fx:id="modelColumn" prefWidth="127" text="Model"/>
                <TableColumn fx:id="bodyTypeColumn" prefWidth="127" text="Body type"/>
                <TableColumn fx:id="yearColumn" prefWidth="127" text="Year"/>
                <TableColumn fx:id="engineTypeColumn" prefWidth="127" text="Engine type"/>
                <TableColumn fx:id="transmissionColumn" prefWidth="127" text="Transmission"/>
                <TableColumn fx:id="priceColumn" prefWidth="127" text="Price"/>
                <TableColumn fx:id="imagePathColumn" prefWidth="146" text="Image path"/>
            </columns>

            <contextMenu>
                <ContextMenu fx:id="carContextMenu">
                    <items>
                        <MenuItem text="Edit" fx:id="editItem" onAction="#handleEditCar"/>
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>

        <TableView fx:id="orderTable" prefHeight="420" prefWidth="1000"
                   visible="false" managed="false">
            <columns>
                <TableColumn fx:id="orderIdColumn" prefWidth="80" text="Order ID"/>
                <TableColumn fx:id="carNameColumn" prefWidth="180" text="Car"/>
                <TableColumn fx:id="userNameColumn" prefWidth="180" text="User"/>
                <TableColumn fx:id="serviceNameColumn" prefWidth="180" text="Service"/>
                <TableColumn fx:id="orderDateColumn" prefWidth="120" text="Order Date"/>
                <TableColumn fx:id="statusColumn" prefWidth="120" text="Status"/>
            </columns>
        </TableView>

        <HBox alignment="CENTER" spacing="50" prefHeight="100">
            <children>
                <Button fx:id="addButton" text="Add" onAction="#handleAddCar"
                        prefHeight="30" prefWidth="90"
                        style="-fx-background-color: #0fb7ff; -fx-background-radius: 15;" textFill="WHITE"/>

                <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteCar"
                        prefHeight="30" prefWidth="90"
                        style="-fx-background-color: #0fb7ff; -fx-background-radius: 15;" textFill="WHITE"/>
            </children>
        </HBox>

    </children>
</VBox>