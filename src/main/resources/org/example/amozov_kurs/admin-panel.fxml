<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="643.0" prefWidth="1034.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.amozov_kurs.Controllers.AdminController">

    <children>

        <!-- Верхняя панель -->
        <HBox alignment="CENTER_LEFT" prefHeight="80">
            <children>
                <Button fx:id="backButton" onAction="#openMainWindow" prefHeight="30" prefWidth="90" style="-fx-background-color: #0fb7ff; -fx-background-radius: 15;" text="Back" textFill="WHITE">
                    <HBox.margin>
                        <Insets left="15" />
                    </HBox.margin>
                </Button>

                <Label text="Admin panel">
                    <font>
                        <Font name="System Bold" size="28" />
                    </font>
                    <HBox.margin>
                        <Insets left="25" />
                    </HBox.margin>
                </Label>
            <HBox alignment="CENTER_RIGHT" prefHeight="75.0" prefWidth="686.0">
               <children>
                  <Button fx:id="addManufactureButton" onAction="#handleAddManufacture" prefHeight="30" prefWidth="165.0" style="-fx-background-color: #0fb7ff; -fx-background-radius: 15;" text="Add maufacture" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </HBox>
            </children>
        </HBox>

        <HBox alignment="CENTER" prefHeight="60" spacing="15">
            <children>
                <Button fx:id="carsButton" onAction="#showCarsTable" prefHeight="30" prefWidth="120" style="-fx-background-color: #0fb7ff; -fx-background-radius: 15;" text="Cars" textFill="WHITE" />

                <Button fx:id="orderButton" onAction="#showOrdersTable" prefHeight="30" prefWidth="120" style="-fx-background-color: white; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #0fb7ff;" text="Order" textFill="#0fb7ff" />
            </children>
        </HBox>

        <TableView fx:id="carTable" prefHeight="420" prefWidth="1000">
            <columns>
                <TableColumn fx:id="manufactureColumn" prefWidth="125" text="Manufacture" />
                <TableColumn fx:id="modelColumn" prefWidth="127" text="Model" />
                <TableColumn fx:id="bodyTypeColumn" prefWidth="127" text="Body type" />
                <TableColumn fx:id="yearColumn" prefWidth="127" text="Year" />
                <TableColumn fx:id="engineTypeColumn" prefWidth="127" text="Engine type" />
                <TableColumn fx:id="transmissionColumn" prefWidth="127" text="Transmission" />
                <TableColumn fx:id="priceColumn" prefWidth="127" text="Price" />
                <TableColumn fx:id="imagePathColumn" prefWidth="146" text="Image path" />
            </columns>

            <contextMenu>
                <ContextMenu fx:id="carContextMenu">
                    <items>
                        <MenuItem fx:id="editItem" onAction="#handleEditCar" text="Edit" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>

        <TableView fx:id="orderTable" managed="false" prefHeight="420" prefWidth="1000" visible="false">
            <columns>
                <TableColumn fx:id="orderIdColumn" prefWidth="80" text="Order ID" />
                <TableColumn fx:id="carNameColumn" prefWidth="180" text="Car" />
                <TableColumn fx:id="userNameColumn" prefWidth="180" text="User" />
                <TableColumn fx:id="serviceNameColumn" prefWidth="180" text="Service" />
                <TableColumn fx:id="orderDateColumn" prefWidth="120" text="Order Date" />
                <TableColumn fx:id="statusColumn" prefWidth="120" text="Status" />
            </columns>
        </TableView>

        <HBox alignment="CENTER" prefHeight="100" spacing="50">
            <children>
                <Button fx:id="addButton" onAction="#handleAddCar" prefHeight="30" prefWidth="90" style="-fx-background-color: #0fb7ff; -fx-background-radius: 15;" text="Add" textFill="WHITE" />

                <Button fx:id="deleteButton" onAction="#handleDeleteCar" prefHeight="30" prefWidth="90" style="-fx-background-color: #0fb7ff; -fx-background-radius: 15;" text="Delete" textFill="WHITE" />
            </children>
        </HBox>

    </children>
</VBox>
