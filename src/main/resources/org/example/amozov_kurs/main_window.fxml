<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="mainContainer" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.amozov_kurs.Controllers.MainController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <Label style="-fx-font-size: 28; -fx-font-weight: bold;" text="Автосалон - Каталог автомобилей" />
                <TextField fx:id="searchField" promptText="Поиск по модели..." prefWidth="300.0" />
                <Button fx:id="filterButton" styleClass="filter-btn" text="Фильтры" />
            </children>
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <HBox.margin>
                <Insets bottom="10.0" />
            </HBox.margin>
        </HBox>

        <Label fx:id="loadingLabel" style="-fx-font-size: 16;" text="Загрузка автомобилей..." visible="false">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>

        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
            <content>
                <FlowPane fx:id="catalogFlow" hgap="20.0" vgap="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="0.0" />
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </children>
</VBox>